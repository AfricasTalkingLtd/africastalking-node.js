extends layout

block content
    h4 Send SMS
    br
    form#bulkSmsForm(action="/sms/send", method="post")
        .form-group.row
            label.col-sm-2.col-form-label(for="recipients") Recipients
            .col-sm-6
                input#recipients.form-control(name="to", type='phone', placeholder='Enter numbers' required)
                small.form-text.text-muted
                    | Enter a comma separated list of numbers, all in the international format i.e. +254712345678, +255787654321
        .form-group.row
            label.col-sm-2.col-form-label(for="message") Message
            .col-sm-6
                textarea#message.form-control(name="message", type='text', placeholder='Enter message' required)
                small.form-text.text-muted
                    | Enter your message here
        br
        .form-group.row.justify-content-between
            .col-sm-5
                a.btn.btn-outline-secondary(href='/') Back
            .col-sm-5
                button.btn.btn-success(type='submit') Send
